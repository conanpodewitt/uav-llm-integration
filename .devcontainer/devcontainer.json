{
  "name": "ROS 2 Development Container",
  "privileged": true,
  "remoteUser": "conan",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USERNAME": "conan"
    }
  },
  "workspaceFolder": "/home/uav-llm-integration",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/uav-llm-integration,type=bind",
  "customizations": {
    "vscode": {
      "extensions":[
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-themes",
        "twxs.cmake",
        "donjayamanne.python-extension-pack",
        "eamodio.gitlens",
        "ms-iot.vscode-ros"
      ]
    }
  },
  // *** Mac Systems ***
  "containerEnv": {
    "DISPLAY": "host.docker.internal:0",
    "ROS_LOCALHOST_ONLY": "1",
    "ROS_DOMAIN_ID": "42"
  },
  "runArgs": [
    "--net=host",
    "-e", "DISPLAY=host.docker.internal:0"
  ],
  // ***
  // *** Linux Systems ***
  // "containerEnv": {
  //   "DISPLAY": "unix:0",
  //   "ROS_LOCALHOST_ONLY": "1",
  //   "ROS_DOMAIN_ID": "42"
  // },
  // "runArgs": [
  //   "--net=host",
  //   "-e", "DISPLAY=${env:DISPLAY}"
  // ],
  // "mounts": [
  //   "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
  //   "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
  // ],
  // ***
  "postCreateCommand": "sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y && sudo chown -R $(whoami) /home/uav-llm-integration/"
}